<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StatActivity" >

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="Name: " />
    
    <TextView
        android:id="@+id/u_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/name"
        android:layout_alignLeft="@+id/u_wins"
        android:layout_marginTop="25dp"
        android:text="namegohere" />
    
    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="Level: " />
    
    <TextView
        android:id="@+id/u_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/u_name"
        android:layout_toRightOf="@+id/level"
        android:layout_alignLeft="@+id/u_wins"
        android:layout_marginTop="25dp"
        android:text="levelgohere" />
    
    <TextView
        android:id="@+id/str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="Str: " />
    
    <TextView
        android:id="@+id/u_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/u_level"
        android:layout_toRightOf="@+id/str"
        android:layout_alignLeft="@+id/u_wins"
        android:layout_marginTop="25dp"
        android:text="strgohere" />

    <TextView
        android:id="@+id/agi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/str"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="Agi: " />
    
    <TextView
        android:id="@+id/u_agi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/u_str"
        android:layout_toRightOf="@+id/agi"
        android:layout_alignLeft="@+id/u_wins"
        android:layout_marginTop="25dp"
        android:text="agigohere" />
    
    <TextView
        android:id="@+id/def"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/agi"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="Def: " />
    
    <TextView
        android:id="@+id/u_def"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/u_agi"
        android:layout_toRightOf="@+id/def"
        android:layout_alignLeft="@+id/u_wins"
        android:layout_marginTop="25dp"
        android:text="defgohere" />
    
    <TextView
        android:id="@+id/wins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/def"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="Wins: " />
    
    <TextView
        android:id="@+id/u_wins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/u_def"
        android:layout_toRightOf="@+id/wins"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="25dp"
        android:text="winsgohere" />
    
    <TextView
        android:id="@+id/losses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wins"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="Losses: " />
    
    <TextView
        android:id="@+id/u_losses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/u_wins"
        android:layout_toRightOf="@+id/losses"
        android:layout_alignLeft="@+id/u_wins"
        android:layout_marginTop="25dp"
        android:text="lossesgohere" />
    
</RelativeLayout>
